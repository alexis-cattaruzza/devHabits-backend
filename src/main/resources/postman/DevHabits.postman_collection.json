        {
          "name": "Register - Valid User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response contains tokens\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('accessToken');",
                  "    pm.expect(jsonData.data).to.have.property('refreshToken');",
                  "    ",
                  "    // Save tokens to environment",
                  "    pm.environment.set(\"accessToken\", jsonData.data.accessToken);",
                  "    pm.environment.set(\"refreshToken\", jsonData.data.refreshToken);",
                  "    pm.environment.set(\"userId\", jsonData.data.user.id);",
                  "    pm.environment.set(\"userEmail\", jsonData.data.user.email);",
                  "    pm.environment.set(\"username\", jsonData.data.user.username);",
                  "    ",
                  "    console.log(\"✅ Tokens saved to environment\");",
                  "});",
                  "",
                  "pm.test(\"User data is correct\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.user.email).to.eql(\"john.doe@example.com\");",
                  "    pm.expect(jsonData.data.user.username).to.eql(\"johndoe\");",
                  "    pm.expect(jsonData.data.user.firstName).to.eql(\"John\");",
                  "    pm.expect(jsonData.data.user.level).to.eql(1);",
                  "    pm.expect(jsonData.data.user.totalXp).to.eql(0);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
